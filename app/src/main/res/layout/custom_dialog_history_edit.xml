<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit History"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="#001a44"
            android:textStyle="bold"
            android:layout_margin="5dp"
            />
        <EditText
            android:id="@+id/et_editHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="history history history history history history history history history history history history history history history "
            android:gravity="center"
            />
        <Button
            android:id="@+id/btn_editDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="DONE"
            android:textSize="25sp"
            android:layout_margin="5dp"
            android:background="#ad009e"
            android:textColor="#dddddd"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>